.welcome {
    @extend .grid;

    &__row {
        @extend .grid__row;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    &__col {
        @extend .grid__col, .grid__col--12;
        text-align: center;
    }


    &__logo {
        display: inline-block;
        padding: 2.5rem;
        border: 6px solid #000;
        border-radius: 50%;
        font-size: 7rem;
    }

    &__heading {
        margin: 3rem 0 2rem;
        heading_fonts({size: 'lg'});
    }

    &__text {
        margin: 0;
        font-size: 2.4rem;
    }
}