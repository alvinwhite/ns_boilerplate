/**
* Colors
*/
$color_accent_1 = #fff;
$color_text_main = #000;
$color_text_faded = alpha(#000, 0.5);

/**
* Typography 
*/
$fz_text = 1.6rem;
$fz_heading_lg = 5.4rem;
$fz_heading_md = 3.2rem;
$fz_heading_sm = 2.4rem;

$ff_main = 'Roboto', Arial, sans-serif;
$ff_headings = 'Roboto', sans-serif;

/**
* Breakpoints 
*/
$xs = _em(375px);
$sm = _em(576px);
$md = _em(768px);
$lg = _em(992px);
$xl = _em(1200px);

$xs_down = $xs - _em(1px);
$sm_down = $sm  - _em(1px);
$md_down = $md - _em(1px);
$lg_down = $lg - _em(1px);
$xl_down = $xl - _em(1px);